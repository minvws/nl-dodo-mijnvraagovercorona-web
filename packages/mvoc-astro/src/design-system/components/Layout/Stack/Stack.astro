---
interface Props {
	gap?:
		| 'nano'
		| 'milli'
		| 'tiny'
		| 'small'
		| 'base'
		| 'large'
		| 'huge'
		| 'humongous';
	style?: string;
}

const { gap = 'base', style } = Astro.props;
---

<div
	class={`c-stack${gap ? ` | u-stack--${gap}` : ''}${
		style ? ` | ${style}` : ''
	}`}
>
	<slot />
</div>

<style lang="scss">
	.c-stack {
		--stack-gap: var(--stack, var(--stack-base));
		:global(> * + *) {
			margin-block-start: var(--stack-gap);
		}
	}
</style>
