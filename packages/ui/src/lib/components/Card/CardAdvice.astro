---
import { Heading } from '@mvoc/ui/elements';
import { Stack, Card } from '@mvoc/ui/components';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Card variant="filled">
	<Stack gap={4}>
		{title ? <Heading level={2}>{title}</Heading> : null}
		<slot />
	</Stack>
</Card>
