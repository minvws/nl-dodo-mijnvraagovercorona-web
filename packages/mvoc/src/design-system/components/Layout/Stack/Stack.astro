---
import { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'div' | 'ul' | 'ol'> {
	as?: 'div' | 'ul' | 'ol';
	gap?:
		| 'nano'
		| 'milli'
		| 'tiny'
		| 'small'
		| 'base'
		| 'large'
		| 'giant'
		| 'huge'
		| 'humongous';
}

const {
	as = 'div',
	gap = 'base',
	id,
	class: className,
	...attrs
} = Astro.props;
const Component = as;
---

<Component
	id={id}
	class={`c-stack${gap ? ` | u-stack--${gap}` : ''}${
		className ? ` | ${className}` : ''
	}`}
	{...attrs}
>
	<slot />
</Component>

<style lang="scss">
	.c-stack {
		--stack-gap: var(--stack, var(--stack-base));
		:global(> * + *) {
			margin-block-start: var(--stack-gap);
		}
	}
</style>
