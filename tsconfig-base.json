{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"module": "esnext",
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "ESNext"],
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": "src"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
