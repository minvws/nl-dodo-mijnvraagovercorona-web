---
import { type HTMLAttributes } from 'astro/types';
import { typography } from '@lib/primitives/typography';
import { Box } from '@components/Box';
import { Stack } from '@lib/components';

interface Props extends HTMLAttributes<'div'> {}
---

<Stack>
	{
		typography.map((item) => (
			<div class="c-typography-grid__item">
				<Box style="text-align: left;" variant="tile">
					<p
						style={`font-size: var(--font-size-${item}); line-height: var(--line-height-${item})`}
					>
						<slot />
					</p>
				</Box>
				<code>--font-size-{item}</code>
				<code>--line-height-{item}</code>
			</div>
		))
	}
</Stack>

<style lang="scss">
	.c-typography-grid__item {
		display: flex;
		flex-direction: column;
		gap: var(--space-1);

		:global(code) {
			font-size: var(--font-size-micro);
		}
	}
</style>
