---
import type { HTMLAttributes } from 'astro/types';

export interface HeadingProps {
	level?: 1 | 2 | 3 | 4 | 5 | 6;
	styledAs?: 1 | 2 | 3 | 4 | 5 | 6;
}
interface Props
	extends HeadingProps,
		HTMLAttributes<'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6'> {}

const { level = 2, styledAs, class: className, ...attrs } = Astro.props;

const Element =
	level === 1
		? 'h1'
		: level === 2
		? 'h2'
		: level === 3
		? 'h3'
		: level === 4
		? 'h4'
		: level === 5
		? 'h5'
		: 'h6';
---

<Element
	class={`e-heading${styledAs ? ` | as-h${styledAs}` : ''}${
		className ? ` | ${className}` : ''
	}`}
	{...attrs}
>
	<slot />
</Element>
