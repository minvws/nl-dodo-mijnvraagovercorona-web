---
import { Sprite } from 'astro-icon';

export interface Props {
	name: 'refresh' | 'plus' | 'external' | 'tooltip' | 'chevron-left';
	size?: string | number;
}

const { name, size } = Astro.props;
---

<style lang="scss">
	.e-icon {
		--icon-size: var(--font-lineheight-root);
		block-size: calc(var(--icon-size) * 1em);
		inline-size: calc(var(--icon-size) * 1em);
	}
</style>
<Sprite class="e-icon" name={name} size={size} optimize={false} />
