---
import type { InputTextProps } from '@design-system/elements/Input';
import { InputText } from '@design-system/elements/Input';
import type { HTMLAttributes } from 'astro/types';
import { FieldWrapper } from '..';

interface Props extends HTMLAttributes<'div'>, InputTextProps {
	label: string;
	id: string;
	hideLabel?: boolean;
}

const {
	class: className,
	type = 'text',
	label,
	id,
	placeholder,
	icon,
	clearable,
	hideLabel,
} = Astro.props;
---

<FieldWrapper
	class={`c-field-input-text${className ? ` | ${className}` : ''}`}
	label={label}
	id={id}
	hideLabel={hideLabel}
>
	<InputText
		type={type}
		id={id}
		placeholder={placeholder}
		icon={icon}
		clearable={clearable}
	/>
	<slot />
</FieldWrapper>

<style lang="scss">
	.c-field-input-text {
	}
</style>
