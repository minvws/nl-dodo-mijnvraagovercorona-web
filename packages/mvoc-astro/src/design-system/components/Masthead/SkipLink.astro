---
import { Button } from '@design-system/elements/Button';

type Props = {
	label: string;
};

const { label } = Astro.props;
---

<Button href="#content" class="c-skiplink" variant={'secondary'}>
	{label}
</Button>

<style lang="scss">
	@use '@design-system-styles/primitives/_responsive.scss';
	@use '@design-system-styles/tools/_a11y.scss';

	.c-skiplink {
		position: absolute;
		inset-block-start: var(--space-r-tiny);
		inset-inline-start: var(--masthead-inline-padding);
		inline-size: auto;

		&:not(:focus) {
			@include a11y.visually-hidden;
		}

		@media --mq-large {
			& {
				inset-block-start: var(--space-r-base);
			}
		}
	}
</style>
