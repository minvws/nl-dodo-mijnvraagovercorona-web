---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
	label: string;
	id: string;
	hideLabel?: boolean;
}

const { class: className, label, id, hideLabel, ...attrs } = Astro.props;
---

<div
	class={`c-field-wrapper${className ? ` | ${className}` : ''}`}
	{...attrs}
	data-module="field-wrapper"
>
	<label
		class={`c-field-wrapper__label${hideLabel ? ` | u-visually-hidden` : ''}`}
		for={id}>{label}</label
	>
	<div>
		<slot />
	</div>
</div>

<style lang="scss">
	.c-field-wrapper {
		display: flex;
		flex-direction: column;
		gap: var(--space-2);
	}
	.c-field-wrapper__label {
		font-weight: bold;
		color: var(--color-diepblauw);
	}
</style>
