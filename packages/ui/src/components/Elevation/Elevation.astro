---
import { type HTMLAttributes } from 'astro/types';
import { Box } from '@components/Box';

interface Props extends HTMLAttributes<'div'> {}

const { class: className, ...attrs } = Astro.props;
---

<div class="c-elevation-grid__item">
	<Box
		style={`outline: var(--elevation-focusring); outline-offset: 2px;`}
		{...attrs}
	/>
	<code>--elevation-focusring</code>
</div>
<div class="c-elevation-grid__item">
	<Box style={`box-shadow: var(--elevation-frost);`} />
	<code>--elevation-frost</code>
</div>
<div class="c-elevation-grid__item">
	<Box style={`box-shadow: var(--elevation-frost--medium);`} />
	<code>--elevation-frost--medium</code>
</div>

<style lang="scss">
	.c-elevation-grid__item {
		display: grid;
		gap: var(--space-4);

		:global(code) {
			font-size: var(--font-size-micro);
		}
	}
</style>
