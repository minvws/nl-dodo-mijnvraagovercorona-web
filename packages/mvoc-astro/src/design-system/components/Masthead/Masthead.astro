---
import Sprite from 'astro-icon';

type Props = {
	logoUrl: string;
	logoAlt: string;
	highlight?: boolean;
};

const { logoUrl, logoAlt, highlight } = Astro.props;
---

<header class={`c-masthead${highlight ? ` c-masthead--highlight` : ''}`}>
	<div>
		<slot name="start" />
	</div>
	<a class="c-masthead__logo" href={logoUrl}>
		<Sprite class="c-masthead__logo-visual" name="ro-logo" optimize={true} />
		<span class="u-visually-hidden">{logoAlt}</span>
	</a>
	<div class="c-masthead__end">
		<slot name="end" />
	</div>
</header>

<style lang="scss">
	@use '@design-system-styles/primitives/_responsive.scss';

	.c-masthead {
		--masthead-background: var(--theme-bg-base);
		position: relative;
		z-index: 50;
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		align-items: center;
		gap: var(--space-r-small);
		padding-inline: var(--space-r-small);
		background-color: var(--masthead-background);
	}

	.c-masthead__end {
		display: flex;
	}

	.c-masthead__logo {
		&:focus {
			outline: var(--elevation-focusring);
			outline-offset: 2px;
		}
	}
	.c-masthead__logo-visual {
		display: block;
		block-size: 4.2105263158rem;

		@media --mq-large {
			& {
				block-size: 5.1rem;
			}
		}
	}

	.c-masthead--highlight {
		--masthead-background: var(--theme-bg-highlight);
	}
</style>
