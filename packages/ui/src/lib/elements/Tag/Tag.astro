---
import type { HTMLAttributes } from 'astro/types';
import { Icon, type Icons } from '@dodo/ui/elements';

interface Props extends HTMLAttributes<'span'> {
	icon?: Icons;
}

const { icon, class: className, ...attrs } = Astro.props;
---

<span class={`c-tag${className ? ` | ${className}` : ''}`} {...attrs}>
	{icon ? <Icon name={icon} /> : null}
	<slot />
</span>

<style lang="scss">
	.c-tag {
		display: inline-flex;
		align-items: center;
		gap: var(--space-2);
		padding-block: var(--space-1);
		padding-inline: var(--space-2);
		border-radius: var(--radii-nano);
		font-size: var(--font-size-milli);
		line-height: var(--line-height-milli);
		background-color: var(--color-poolblauw);
		color: var(--color-diepblauw);
		font-weight: bold;
		&::first-letter {
			text-transform: uppercase;
		}

		&[hidden] {
			display: none;
		}
	}
</style>
