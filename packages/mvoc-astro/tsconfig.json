{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"baseUrl": ".",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"paths": {
			"@design-system/*": ["./src/ds/*"],
			"@modules/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"]
		}
	},
	"exclude": ["**/node_modules", "**/dist"]
}
