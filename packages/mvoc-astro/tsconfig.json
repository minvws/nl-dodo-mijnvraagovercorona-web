{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"paths": {
			"@design-system/*": ["./src/design-system/*"],
			"@modules/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"]
		}
	},
	"exclude": ["**/node_modules", "**/dist"]
}
