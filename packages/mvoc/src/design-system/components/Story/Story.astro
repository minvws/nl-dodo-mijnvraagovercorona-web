---
import { Heading } from '@design-system/elements/Heading';
import { HTMLAttributes } from 'astro/types';
import { StoryProps } from 'src/utilities/api/queries/stories';
import { stringToSlug } from 'src/utilities/stringToSlug';
import { MultiContentBlockOld } from '../ContentBlock';
import { Stack } from '../Layout/Stack';

interface Props extends HTMLAttributes<'section'>, StoryProps {}

const { headline, contentBlocks, class: className } = Astro.props;
---

<section
	class={`c-story${className ? ` | ${className}` : ''}`}
	id={stringToSlug(headline)}
>
	<Stack gap="small">
		<Heading>{headline}</Heading>
		<MultiContentBlockOld contentBlocks={contentBlocks} />
	</Stack>
</section>

<style lang="scss">
	.c-story {
	}
</style>
