---
import { Heading } from '@mvoc/ui/elements';
import { Stack } from '@mvoc/ui/components';
import { Card } from '@mvoc/ui/components';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<Card variant="filled">
	<Stack gap={4}>
		<Heading level={2}>
			{title ? <span>{title}</span> : null}
		</Heading>
		<slot />
	</Stack>
</Card>
