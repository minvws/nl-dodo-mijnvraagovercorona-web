---
import { Button } from '@design-system/elements/Button';

type Props = {
	label: string;
};

const { label } = Astro.props;
---

<Button href="#content" class="c-skiplink" full variant={'secondary'}>
	{label}
</Button>

<style lang="scss">
	@use '@design-system-styles/tools/_a11y.scss';

	.c-skiplink.c-skiplink {
		--button-border-radius: 0px;
		inset-block-start: 0;
		inset-inline-start: 0;
		inline-size: auto;
		z-index: 51;

		&:not(:focus) {
			@include a11y.visually-hidden;
		}
	}
</style>
