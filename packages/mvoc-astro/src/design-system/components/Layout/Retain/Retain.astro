---
import { HTMLAttributes } from 'astro/types';
interface Props extends HTMLAttributes<'div' | 'section'> {
	as?: 'div' | 'section';
	variant?: 'base' | 'text';
}

const {
	variant = 'base',
	as = 'div',
	class: className,
	...attrs
} = Astro.props;

const Component = as;
---

<Component
	class={`c-retain${variant ? ` c-retain--${variant}` : ''}${
		className ? ` | className` : ''
	}`}
	{...attrs}
>
	<slot />
</Component>

<style lang="scss">
	@use '@design-system-styles/primitives/_responsive.scss';
	.c-retain {
		--retain-size: 36.6315789474rem; // 696px
		--retain-padding: var(--space-s-small);
		max-inline-size: var(--retain-size);
		padding-inline: var(--retain-padding);
		margin-inline: auto;

		@media --mq-large {
			--retain-size: 63.2rem; // 1264px
			--retain-padding: var(--space-s-large);
		}
	}

	.c-retain--text {
		--retain-padding: 0px;
		--retain-size: 35rem; // 665px
		margin-inline-start: 0;

		@media --mq-large {
			--retain-size: 33.25rem; // 665px
		}
	}
</style>
