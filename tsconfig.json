{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"allowJs": true,
		"noEmit": true,
		"strict": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"jsx": "preserve",
		"module": "esnext",
		"forceConsistentCasingInFileNames": true,
		"lib": ["dom", "ESNext"],
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"baseUrl": ".",
		"rootDir": ".",
    "typeRoots": ["<rootDir>/packages/*/types", "<rootDir>/node_modules/@types"],
		"paths": {
			"@quarantaine/*": ["./packages/*/src"]
		}
	},
	"exclude": ["**/node_modules", "**/.next", "**/out"]
}
