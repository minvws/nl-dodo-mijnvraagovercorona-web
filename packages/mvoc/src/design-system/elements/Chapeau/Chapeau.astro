---
import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'span'> {
	variant?: 'base' | 'highlight';
	role?: 'presentation';
}

const { class: className, role, variant = 'base', ...attrs } = Astro.props;
---

<span
	class={`e-chapeau${variant ? ` e-chapeau--${variant}` : ''}${
		className ? ` | ${className}` : ''
	}`}
	role={role}
	{...attrs}
>
	<slot />
</span>

<style lang="scss">
	.e-chapeau {
		font-size: var(--chapeau-font-size, 1rem);
		line-height: var(--chapeau-line-height, var(--font-lineheight-root));
		font-weight: bold;
		color: var(--chapeau-color, var(--color-accent-robijnrood));
	}

	.e-chapeau--highlight {
		--chapeau-color: var(--color-donkerblauw);
	}
</style>
