---
import { type HTMLAttributes } from 'astro/types';
import { Box } from '@components/Box';
import { density } from '@lib/primitives';
import { Stack } from '@lib/components';

interface Props extends HTMLAttributes<'div'> {}

const { class: className, ...attrs } = Astro.props;
---

<Stack class="c-density-grid">
	{
		density.map((densitySize) => (
			<Box
				variant="tile"
				style={`--box-density: var(--density-${densitySize});`}
				{...attrs}
			>
				<code>--density-{densitySize}</code>
			</Box>
		))
	}
</Stack>

<style lang="scss">
	.c-density-grid {
		:global(.c-box) {
			display: block;
		}

		:global(code) {
			font-size: var(--font-size-micro);
			white-space: nowrap;
		}
	}
</style>
