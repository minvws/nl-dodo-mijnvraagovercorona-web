---
import Sprite from 'astro-icon';

type Props = {
	logoUrl: string;
	logoAlt: string;
	highlight?: boolean;
};

const { logoUrl, logoAlt, highlight } = Astro.props;
---

<header
	class={`c-masthead${highlight ? ` c-masthead--highlight` : ''}`}
	role="banner"
>
	<div>
		<slot name="start" />
	</div>
	<div>
		<slot name="end" />
	</div>
</header>

<style lang="scss">
	@use '@design-system-styles/primitives/_responsive.scss';

	.c-masthead {
		--masthead-background: var(--color-white);
		--masthead-inline-padding: var(--space-r-small);
		position: relative;
		z-index: 50;
		padding-inline: var(--masthead-inline-padding);
		background-color: var(--masthead-background);

		@media --mq-large {
			--masthead-inline-padding: var(--space-r-large);
		}
	}
</style>
