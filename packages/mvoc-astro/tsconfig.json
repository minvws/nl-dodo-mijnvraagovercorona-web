{
	"extends": "astro/tsconfigs/base",
	"compilerOptions": {
		"baseUrl": ".",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"paths": {
			"@design-system/*": ["../design-system/src/lib/*"],
			"@modules/*": ["./src/components/*"],
			"@layouts/*": ["./src/layouts/*"]
		}
	},
	"exclude": ["**/node_modules", "**/dist"]
}
