---
import type { IconProps } from '@mvoc/ui/elements';
import { Icon } from '@mvoc/ui/elements';
import type { HTMLAttributes } from 'astro/types';
import { Stack } from '../Layout/Stack';

interface Props extends HTMLAttributes<'div'> {
	icon: IconProps['name'];
}

const { class: className, icon, ...attrs } = Astro.props;
---

<div class={`c-attribute${className ? ` | ${className}` : ''}`} {...attrs}>
	<Icon class="c-attribute__icon" name={icon} />
	<Stack class="c-attribute__body">
		<slot />
	</Stack>
</div>

<style lang="scss">
	.c-attribute {
		display: flex;
		gap: var(--space-3);
	}

	.c-attribute__icon {
		--icon-size: var(--space-6);
		color: var(--attribute-icon-color, var(--color-accent-robijnrood));
	}
</style>
